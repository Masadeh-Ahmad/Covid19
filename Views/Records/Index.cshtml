
@model List<Covid.Models.Records>
<!DOCTYPE html>

<html>
<head>
    <title>@ViewData["Title"] Covid</title>
    <link rel="stylesheet" href="~/css/HomeStyle.css" />
</head>
<body>
<div class="title"><B>My Records</B></div>
    @if(Model.Count == 0)
    {
        <b style="font-size:50px;color:red"> No Available Records</b>
    }
    else{
    <div style="margin-top: 20px" class="container">
        <div class="row">
            @foreach (var one in Model)
            {
                <div class="col-sm-4">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title red-text">Country: @one.Name</h3>
                        </div>
                        <div class="card-body">
                            <p>Data: @one.Date</p>
                            <form style="margin-top:40px" method="post" asp-controller="Records" asp-action="Delete">
                                <input type="hidden" name="id" value="@one.Id">
                                <input type="submit" value="DELETE">
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    }

   
</body>
</html>